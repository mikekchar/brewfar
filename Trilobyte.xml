<!DOCTYPE beer PUBLIC "-//MKC/Beer 0.01//EN" "http://rook.dyndns.org/pub-beer/beer.dtd">
<beer>
  <name>Trilobyte Brown</name>
  <style>American Brown Ale</style>
  <first-brewed>June 15, 2003</first-brewed>
  <brewers>Mike, Nick and Don</brewers>
  <ingredients>
    <fermentables>
       <malt>
          <type>Pale 2-Row (Canadian)</type>
          <qty units="kg">4.00</qty>
          <added>mash</added>
       </malt>
       <malt>
         <type>Crystal</type>
         <qty units="kg">0.50</qty>
          <added>mash</added>
       </malt>
       <malt>
         <type>Chocolate</type>
         <qty units="kg">0.25</qty>
          <added>mash</added>
       </malt>
    </fermentables>
    <flavourings>
      <hop>
        <type>Northern Brewer</type>
        <acid>6.3</acid>
        <qty units="g">50</qty>
        <added>60 min</added>
      </hop>
      <hop>
        <type>Cascade</type>
        <acid>5.4</acid>
        <qty units="g">12</qty>
        <added>15 min</added>
      </hop>
    </flavourings>
    <yeast>
      <type>British Ale (Wyeast 1098)</type>
      <qty units="smackpack">1</qty>
      <added>Primary</added>
    </yeast>
    <priming>
      <type>Dextrose</type>
      <qty units="cup">0.5</qty>
    </priming>
  </ingredients>
  <stats>
    <sg>1040</sg>
    <fg>1011</fg>
    <attenuation>72.5%</attenuation>
    <extract>64%</extract>
    <colour>45.5</colour>
    <ibu>39.2</ibu>
  </stats>
